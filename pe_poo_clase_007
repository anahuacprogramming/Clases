boolean btn1Press=false;

void setup() {
  size (600, 200);
  background(255);
}

void draw() {


  fill(0, 255, 0, 50);
  ellipse(mouseX, mouseY, 75, 75);

  //    if (btn1Press==true) {
  //    background(0);
  //  }
}

void mousePressed() {
  if (btn1Press==true) {
    btn1Press=false;
    background(255);
  } else {
    btn1Press=true;
    background(0);
  }
}
